---
const { monThur, monThurTimes, fri, friTimes, weekend, weekendTimes } = Astro.props;
const { overskrift, info } = Astro.props;
---

<div class="container">
  <div>
    <h1 class="h3">
      {overskrift}
    </h1>
    <h1 class="h4">
      {info}
    </h1>

    <table class="openingHours h5">
      <tr>
        <td>{monThur}</td>
        <td>{monThurTimes}</td>
      </tr>
      <tr>
        <td>{fri}</td>
        <td>{friTimes}</td>
      </tr>
      <tr>
        <td>{weekend}</td>
        <td>{weekendTimes}</td>
      </tr>
    </table>
  </div>
</div><div class="soc_media">
  <a href="https://www.facebook.com/Guldsmed.Hans.Ulrik.Nielsen/?locale=da_DK" target="_blank" rel="noopener noreferrer">
    <img src="/icons/facebook_desk.svg" alt="facebook" />
  </a>
  <a href="https://www.instagram.com/hansulriknielsen?igsh=bGE0b3V5dWR6cGU4" target="_blank" rel="noopener noreferrer">
    <img src="/icons/insta_desk.svg" alt="facebook" />
  </a>
</div>

<style>
  .container {
    padding-top: var(--spacing_1);
  }

  table.openingHours {
    width: 50%;
    line-height: var(--spacing_5);
  }

  table.openingHours td:last-child {
    text-align: right;
  }

  .soc_media img {
    width: 30px;
    height: auto;
    margin: 0;
  }

  .soc_media {
    padding-top: var(--spacing_6);
  }

  a {
    text-decoration: none;
  }

  @media (min-width: 700px) {
    table.openingHours {
      width: 55%;
      font-size: 1rem;
      font-family: var(--font_ver);
    }

    .container {
      padding: 0;
    }

    .soc_media img {
      width: 40px;
      height: auto;
    }

    .soc_media {
      padding: 18% 0 0 15%;
    }
  }
</style>
