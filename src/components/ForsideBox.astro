---
const { header } = Astro.props;
const { introText } = Astro.props;
const { elaborationText } = Astro.props;
const { monThur, monThurTimes, fri, friTimes, weekend, weekendTimes } = Astro.props;
---

<div class="container">
  <h3 class="h2 h2_padding">{header}</h3>
  <p class="p">{introText}</p>
  <p class="p p_padding">{elaborationText}</p>

  <table class="openingHours p">
    <tr>
      <td>{monThur}</td>
      <td>{monThurTimes}</td>
    </tr>
    <tr>
      <td>{fri}</td>
      <td>{friTimes}</td>
    </tr>
    <tr>
      <td>{weekend}</td>
      <td>{weekendTimes}</td>
    </tr>
  </table>
</div>

<style>
  .container {
    background-color: var(--primary_boks);
    margin: 3% 5%;
    padding: 3% 5%;
  }

  table.openingHours {
    width: 50%;
    padding-bottom: var(--spacing_5);
  }

  table.openingHours td:last-child {
    text-align: right;
  }

  .h2_padding,
  .p_padding {
    padding-top: var(--spacing_1);
    padding-bottom: var(--spacing_1);
  }

  @media (min-width: 700px) {
    table.openingHours {
      width: 70%;
      font-size: 1.2rem;
      font-family: var(--font_geo);
    }
  }
</style>
