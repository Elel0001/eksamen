---
const { header } = Astro.props;
const { introText } = Astro.props;
const { elaborationText } = Astro.props;
const { monThur, monThurTimes, fri, friTimes, weekend, weekendTimes } = Astro.props;
---

<div class="container">
  <h3>{header}</h3>
  <p>{introText}</p>
  <p>{elaborationText}</p>

  <table class="openingHours">
    <tr>
      <td>{monThur}</td>
      <td>{monThurTimes}</td>
    </tr>
    <tr>
      <td>{fri}</td>
      <td>{friTimes}</td>
    </tr>
    <tr>
      <td>{weekend}</td>
      <td>{weekendTimes}</td>
    </tr>
  </table>
</div>

<style>
  .container {
    background-color: var(--primary_boks);
    margin: 3% 5%;
    padding: 3% 5%;
  }

  table.openingHours {
    width: 50%;
  }

  table.openingHours td:last-child {
    text-align: right;
  }

  @media (min-width: 700px) {
    table.openingHours {
      width: 70%;
    }
  }
</style>
