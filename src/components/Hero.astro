---
import "../styles/general.css";

import Button from "../components/Button.astro";
---

<div class="hero-container">
  <div class="hero">
    <img src="img/hero_with_gradient.jpg" alt="Hero Image" />
    <div class="title-container">
      <div class="title h4">Anno 1975</div>
      <div class="title h3">Guldsmed i Gr√∏nnegade</div>
      <div class="hero_button"><Button size="medium">Book en aftale</Button></div>
    </div>
  </div>
</div>

<style>
  .hero {
    position: relative;
    width: 100%;
    height: auto;
    display: grid;
    margin-bottom: var(--spacing_8);
  }

  .hero img {
    width: 100%;
    height: auto;
    object-fit: cover;
    grid-column: 1/4;
    grid-row: 1/4;
    margin: 0;
  }

  .title-container {
    text-align: left;
    z-index: 1;
    grid-column: 1 / span 3;
    grid-row: 2 / span 1;
    display: grid;
    padding-left: 5%;
    margin: 0;
  }

  .title {
    color: var(--primary_background);
  }

  .hero_button {
    padding-top: 2%;
    margin: 0;
  }

  @media screen and (min-width: 800px) {
    .hero {
      position: relative;
      width: 100%;
      height: auto;
      margin-bottom: var(--spacing_8);
    }

    .hero-container {
      position: relative;
      width: 100vw;
      left: 50%;
      right: 50%;
      margin-left: -50vw;
      margin-right: -50vw;
    }
  }
  @media screen and (min-width: 1200px) {
    .hero {
      position: relative;
      width: 100%;
      height: auto;
      margin-bottom: var(--spacing_8);
    }
  }
</style>
