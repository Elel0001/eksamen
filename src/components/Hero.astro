---
import "../styles/general.css";
---

<div class="hero">
  <img src="img/hero_with_gradient.jpg" alt="Hero Image" />
  <div class="title-container">
    <div class="title">Anno 1975</div>
    <div class="title_to">Guldsmed i Gr√∏nnegade</div>
    <button class="button_hero">Buttonnn</button>
  </div>
</div>

<style>
  .hero {
    position: relative;
    width: 100%;
    height: 27vh;
    display: grid;
    grid-template-columns: 1fr 0.1fr 0.1fr;
    grid-template-rows: 1fr 1fr 1fr;
  }

  .hero img {
    width: 100%;
    height: auto;
    object-fit: cover;
    grid-column: 1/4;
    grid-row: 1/4;
  }

  .title-container {
    text-align: left;
    z-index: 1;
    grid-column: 1 / span 1;
    grid-row: 2 / span 1;
    display: grid;
    padding-left: 5%;
  }

  .title {
    color: var(--primary_background);
  }

  .title_to {
    color: var(--primary_background);
  }

  .button_hero {
    margin-top: 3%;
  }

  @media screen and (min-width: 800px) {
    .hero {
      position: relative;
      width: 100%;
      height: 40vh;
      overflow: hidden;
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      grid-template-rows: 1fr 1fr 1fr;
    }

    .title-container {
      text-align: center;
      z-index: 1;
      grid-column: 1 / span 1;
      grid-row: 2 / span 1;
      display: grid;
      place-items: center;
    }

    .title {
    }
  }
  @media screen and (min-width: 1200px) {
    .hero {
      position: relative;
      width: 100%;
      height: 70vh;
      overflow: hidden;
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      grid-template-rows: 1fr 1fr 1fr;
      padding-top: 2%;
    }

    .title-container {
      text-align: center;
      z-index: 1;
      grid-column: 1 / span 1;
      grid-row: 2 / span 1;
      display: grid;
      place-items: center;
    }
  }
</style>
