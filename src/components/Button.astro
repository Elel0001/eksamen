---
const { size } = Astro.props;
---

<button class={size}><slot /></button>

<style>
  button {
    border-radius: 5px;
  }

  button:hover {
    background-color: aliceblue;
  }

  .small {
    background-color: aqua;
    padding: 6px 10px;
  }

  .medium {
    background-color: rgb(0, 255, 13);
  }

  .large {
    background-color: rgb(255, 0, 0);
  }

  @media (min-width: 769px) {
    .small {
      padding: 10px 40px;
    }

    .medium {
      background-color: rgb(0, 255, 13);
    }

    .large {
      background-color: rgb(255, 0, 0);
    }
  }
</style>
