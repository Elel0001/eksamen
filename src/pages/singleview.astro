---
import MainLayout from "../layout/MainLayout.astro";
import "../styles/general.css";
import Card_single from "../components/Card_single.astro";
import BreadCrumbs from "../components/BreadCrumbs.astro";
---

<MainLayout title="Produktside">
  <div class="bc">
    <BreadCrumbs link="/#">
      <span class="hover">Hjem</span>&nbsp;/&nbsp;
    </BreadCrumbs>
    <BreadCrumbs link="/katalog">
      <span class="underline">Katalog</span>
    </BreadCrumbs>
  </div>
  <Card_single
    imgsingle="/img/singleview_pic/ring_1.webp"
    imgsingle2="/img/produkter/ring_1.webp"
    pris="2500 kr."
    texts1="Smuk sterling sølvring med lilla ametyst."
    texts2="Ametysten måler 10 x 15 mm. Ringen kan fåes i den størrelse som du ønsker det. "
    texts3="Vi har flere typer ringe med forskellige slags størrelser og sten. Kig forbi værkstedet efter aftale eller kontakt Hans Ulrik Nielsen pr. telefon eller mail for yderligere information."
    texts4="Varenummer: RING24"
  />
</MainLayout>
<style>
  @media (min-width: 800px) {
    .bc {
      display: inline-flex;
    }

    .underline {
      position: relative;
    }

    .underline::after {
      content: "";
      position: absolute;
      left: 0;
      bottom: -2px;
      width: 100%;
      border-bottom: 1px solid var(--secondary_tekst);
    }
    .hover {
      position: relative;
    }

    .hover::after {
      content: "";
      position: absolute;
      left: 0;
      bottom: -2px;
      width: 0;
      border-bottom: 1px solid var(--secondary_tekst);
      transition: width 0.3s ease-in-out;
    }

    .hover:hover::after {
      width: 100%;
    }
  }
</style>
