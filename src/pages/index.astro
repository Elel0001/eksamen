---
import MainLayout from "../layout/MainLayout.astro";

import Hero from "../components/Hero.astro";
import OverskriftWithUnderline from "../components/OverskriftWithUnderline.astro";
import Button from "../components/Button.astro";
import ForsideBox from "../components/ForsideBox.astro";
---

<MainLayout />
<Hero />
<OverskriftWithUnderline overskrift="Hans Ulrik Nielsen" />
<div class="grid_bokses">
  <ForsideBox
    header="Guldsmed siden 1975"
    introText="Velkommen til vores værksted i hjertet af København,  Grønnegade 26."
    elaborationText="Vi har stor erfaring indenfor området og er særligt specialiseret i at lave personlige smykker af arveguld, i tæt samarbejde med dig. "
  />
  <ForsideBox
    header="Vores koncept"
    introText="Her hos os kan du få lavet et personligt smykke, få repareret smykker eller købe eksisterende unikke håndlavede smykker."
    elaborationText="Kontakt os gerne, hvis du finder et smykke interesant, da vi ikke har en webshop, men et katalog hvor du kan se vores udvalg. "
  />
  <ForsideBox
    header="Åbningstider"
    introText="Har du spørgsmål eller drømmer om noget særligt, da kontakt os via formularen, pr. mail eller telefon."
    elaborationText="Åbent efter aftale i tidsrummet: "
    monThur="Man-Tors"
    monThurTimes="08:00 - 16:00"
    fri="Fre"
    friTimes="08:00 - 15:00"
    weekend="Lør-Søn"
    weekendTimes="Lukket"
  />
</div>

<Button size="small">Book en aftale</Button>
<Button size="medium">TEXT2</Button>
<Button size="large">TEXT3</Button>

<style>
  @media (min-width: 800px) {
    .grid_bokses {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      margin: 2% 10%;
    }
  }
</style>
