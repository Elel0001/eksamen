<style>
  .grid {
    margin-bottom: 2rem;
    display: flex;
    flex-direction: column;
    gap: var(--spacing_1);
  }

  .product_list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing_4);
    margin-right: 2rem;
  }

  @media (min-width: 800px) {
    .grid {
      display: grid;
      grid-template-columns: 320px 1fr;
    }
    .product_list {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 14px;
    }
