---
import MainLayout from "../layout/MainLayout.astro";
import OverskriftWithUnderline from "../components/OverskriftWithUnderline.astro";
import KontaktIcons from "../components/KontaktIcons.astro";
import Button from "../components/Button.astro";
import OpenHours from "../components/OpenHours.astro";
---

<MainLayout>
  <OverskriftWithUnderline overskrift="Kontakt" />
  <div class="container">
    <div class="icons_cont">
      <KontaktIcons svgPath="/icons/kompas_s.svg" overskrift="Adresse" info="Grønnegade 26 2.sal 1107 København Find adressen" />
      <a href="https://www.kea.dk/">HER</a>

      <KontaktIcons svgPath="/icons/telefon_s.svg" overskrift="Telefon" info="+45 29 47 00 23" />
      <KontaktIcons svgPath="/icons/email_s.svg" overskrift="Email" info="hun10@balbonet.dk" />
      <OpenHours svgPath="/icons/clock_s.svg" overskrift="Åbningstider efter aftale" monThur="Man-Tors" monThurTimes="08:00 - 16:00" fri="Fre" friTimes="08:00 - 15:00" weekend="Lør-Søn" weekendTimes="Lukket" />
    </div>
    <div class="img_cont"><img src="img/kontakt.jpg" alt="img" /></div>
  </div>
</MainLayout>

<style>
  .img_cont {
    padding: 3% 0;
  }
  @media screen and (min-width: 800px) {
    .container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      margin: 0 10%;
    }

    .img_cont {
      margin-top: 4%;
      margin-left: 13%;
    }
  }
</style>
